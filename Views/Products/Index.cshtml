@model IEnumerable<LabASPNET.Models.Product>

<h2>Products</h2>

<table class="table">
	<thead>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Price</th>
		<th>Description</th>
		<th>Actions</th> <!-- Новый столбец для действий -->
	</tr>
	</thead>
	<tbody>
	@foreach (var product in Model)
	{
		<tr>
			<td>@product.ProductId</td>
			<td>@product.Name</td>
			<td>@product.Price.ToString("C")</td>
			<td>@product.Description</td>
			<td>
				<!-- Кнопка редактирования -->
				<a href="@Url.Action("EditProduct", "Products", new { id = product.ProductId })" class="btn btn-warning">Edit</a>

				<!-- Кнопка удаления -->
				<form method="post" action="@Url.Action("Delete", "Products", new { id = product.ProductId })" style="display:inline;">
					<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>

<!-- Кнопка для добавления нового продукта -->
<a href="@Url.Action("Create", "Products")" class="btn btn-primary">Add New Product</a>